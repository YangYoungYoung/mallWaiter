.table-content {
  width: 100%;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.table-number {
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  margin-top: -20rpx;
  color: #fff;
}

.table-line {
  width: 117rpx;
  background-color: #fff;
  height: 2rpx;
  margin-top: 80rpx;
}

.table-text {
  width: 100%;
  height: 28rpx;
  color: #fff;
  font-size: 26rpx;
  margin-top: -60rpx;
}

/* 底部 */

.footer {
  width: 100%;
  height: 73rpx;
  position: fixed;
  margin-top: 10rpx;
  bottom: 0;
  background-color: #c9c9ca;
}

.footer-content {
  display: flex;
  flex-direction: row;
  height: 67rpx;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  margin-top: 6rpx;
  background-color: #fff;
}

.foot-left {
  margin-left: 59rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
}

.examine-btn {
  width: 123rpx;
  height: 49rpx;
  text-align: center;
  line-height: 49rpx;
  font-size: 25rpx;
  background-color: #0fb0f9;
  color: #fff;
  margin-right: 41rpx;
}
