/**index.wxss**/

page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  width: 100%;
  background-color: #626262;
  height: 62rpx;
  text-align: left;
  line-height: 62rpx;
  font-size: 26rpx;
  color: #fff;
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.region{
  height: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  line-height: 100%;
}
.region-right{
  height: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  line-height: 100%;
}

.radio-group{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  text-align: center;
  align-items: center;
}

.radio{
  height: auto;
  width: 100%;
  transform:scale(0.7);
}
.scroll {
  width: 100%;
  align-items: center;
  text-align: center;
  padding-bottom: 82rpx;
}

.quyu {
  width: 66rpx;
  height: 42rpx;
  margin-left: 51rpx;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 42rpx;
}

.area-item {
  margin-left: 15rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  height: 62rpx;
  line-height: 62rpx;
}

.item-area {
  font-size: 26rpx;
  height: 62rpx;
  line-height: 62rpx;
}

.item-line {
  height: 62rpx;
  line-height: 62rpx;
  margin-left: 10rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  text-align: center;
  margin-top: 26rpx;
}

/* 空闲状态 */

.item-table {
  width: 174rpx;
  height: 165rpx;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  border: 1rpx solid #035c86;
  border-radius: 10rpx;
  line-height: 165rpx;
  margin-bottom: 24rpx;
  margin-left: 54rpx;
  background-color: #04aaf9;
}

